---
import { getCollection } from "astro:content";
import "@fontsource-variable/roboto-slab";

import Post from "../components/Post.astro";
import Link from "../components/Link.astro";
import BaseHead from "../components/BaseHead.astro";

import { SITE_TITLE } from "../consts";

const description =
  "Documenting Mihail Marian's journey into algorithmic trading. I'll be analysing the world of financial markets and quantitative investing with a healthy dose of scepticism.";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={description} />
  </head>
  <body
    class="max-w-3xl mx-auto min-h-screen px-6 py-10 sm:px-8 bg-gray-100 font-roboto tracking-wide"
  >
    <main>
      <h1
        class="font-medium text-3xl md:text-5xl tracking-tighter mb-10 overflow-hidden"
      >
        The Sceptical Trader
      </h1>
      <section class="mb-10">
        Hi! I'm Mihail and I'm documenting my journey into quant trading. Wanna
        talk? Reach out to me <Link
          url="https://linkedin.com/in/mihailmarian"
          newTab>on LinkedIn</Link
        >.
      </section>
      <section>
        <ul>
          {posts.map((post) => <Post post={post} />)}
        </ul>
      </section>
    </main>
  </body>
</html>
